#!/bin/sh

set -e

. ./build_config

build_type="$1"

if [ -z "${build_type}" ]
then
    echo "No build type!"
fi

YY_INSTALL_DIR="${HOME}/code/cpp/build"
YY_TP_DIR="${HOME}/code/tp"

echo "\nyy_test"
cd ../yy_test/build
if [ -f Makefile ]; then
    ${YY_MAKE} clean
fi
rm -rf ./*
cmake --fresh -DCMAKE_INSTALL_PREFIX=${YY_INSTALL_DIR} -DYY_THIRD_PARTY_LIBRARY=${YY_TP_DIR} -DCMAKE_POSITION_INDEPENDENT_CODE=TRUE -DCMAKE_BUILD_TYPE=${build_type} ..
make all && make install || exit 1

echo "\nyy_tp_util"
cd ../../yy_tp_util/build
if [ -f Makefile ]; then
    ${YY_MAKE} clean
fi
rm -rf ./*
cmake --fresh -DCMAKE_INSTALL_PREFIX=${YY_INSTALL_DIR} -DYY_THIRD_PARTY_LIBRARY=${YY_TP_DIR} -DCMAKE_POSITION_INDEPENDENT_CODE=TRUE -DCMAKE_BUILD_TYPE=${build_type} ..
${YY_MAKE} all && make install || exit 1

echo "\nyy_cpp"
cd ../../yy_cpp/build
if [ -f Makefile ]; then
    ${YY_MAKE} clean
fi
rm -rf ./*
cmake --fresh -DCMAKE_INSTALL_PREFIX=${YY_INSTALL_DIR} -DYY_THIRD_PARTY_LIBRARY=${YY_TP_DIR} -DCMAKE_POSITION_INDEPENDENT_CODE=TRUE -DCMAKE_BUILD_TYPE=${build_type} ..
${YY_MAKE} all test && make install || exit 1

echo "\nyy_json"
cd ../../yy_json/build
if [ -f Makefile ]; then
    ${YY_MAKE} clean
fi
rm -rf ./*
cmake --fresh -DCMAKE_INSTALL_PREFIX=${YY_INSTALL_DIR} -DYY_THIRD_PARTY_LIBRARY=${YY_TP_DIR} -DCMAKE_POSITION_INDEPENDENT_CODE=TRUE -DCMAKE_BUILD_TYPE=${build_type} ..
${YY_MAKE} all test && make install || exit 1

echo "\nyy_maths"
cd ../../yy_maths/build
if [ -f Makefile ]; then
    ${YY_MAKE} clean
fi
rm -rf ./*
cmake --fresh -DCMAKE_INSTALL_PREFIX=${YY_INSTALL_DIR} -DYY_THIRD_PARTY_LIBRARY=${YY_TP_DIR} -DCMAKE_POSITION_INDEPENDENT_CODE=TRUE -DCMAKE_BUILD_TYPE=${build_type} ..
${YY_MAKE} all && make install || exit 1

echo "\nyy_mqtt"
cd ../../yy_mqtt/build
if [ -f Makefile ]; then
    ${YY_MAKE} clean
fi
rm -rf ./*
cmake --fresh -DCMAKE_INSTALL_PREFIX=${YY_INSTALL_DIR} -DYY_THIRD_PARTY_LIBRARY=${YY_TP_DIR} -DCMAKE_POSITION_INDEPENDENT_CODE=TRUE -DCMAKE_BUILD_TYPE=${build_type} ..
${YY_MAKE} all test && make install || exit 1

echo "\nmendel"
cd ../../mendel/build-dir
if [ -f Makefile ]; then
    ${YY_MAKE} clean
fi
rm -rf ./*
cmake --fresh -DCMAKE_INSTALL_PREFIX=${YY_INSTALL_DIR} -DYY_THIRD_PARTY_LIBRARY=${YY_TP_DIR} -DCMAKE_POSITION_INDEPENDENT_CODE=TRUE -DCMAKE_BUILD_TYPE=${build_type} ..
${YY_MAKE} all
cd ../
